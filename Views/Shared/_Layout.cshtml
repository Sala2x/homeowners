<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Homeowners Association</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 250px;
            background-color: #21443F;
            color: white;
            padding: 20px;
            height: 100vh;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px;
                border-radius: 5px;
            }

                .sidebar a:hover {
                    background-color: #2F5C54;
                }

        .main-content {
            flex: 1;
            padding: 20px;
            background-color: #F9F9F9;
        }

        .search-box {
            display: flex;
            align-items: center;
            background-color: #3A6B62;
            border-radius: 5px;
            padding: 5px;
        }

            .search-box input {
                background: transparent;
                border: none;
                color: white;
                flex: 1;
                padding: 5px;
                outline: none;
            }

            .search-box i {
                padding: 5px;
                color: white;
            }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column">
        <h5 class="text-center">🏡 OAKLAND HOMEOWNERS ASSOCIATION</h5>

        <!-- Search -->
        <div class="search-box">
            <i class="bi bi-search"></i>
            <input type="text" placeholder="Search here">
        </div>

        <nav class="mt-3">
            <a href="/Home/Index"><i class="bi bi-house-door"></i> Home</a>
            <a href="/Home/Announcement"><i class="bi bi-megaphone"></i> Announcement</a>
            <a href="#"><i class="bi bi-calendar-event"></i> Event Calendar</a>
            <a href="#"><i class="bi bi-tools"></i> Maintenance Requests</a>
            <a href="#"><i class="bi bi-person"></i> My Account</a>
            <a href="#"><i class="bi bi-credit-card"></i> Make a Payment</a>
            <a href="#"><i class="bi bi-telephone"></i> Phone Book</a>
            <a href="#"><i class="bi bi-chat-dots"></i> Discussion Forum</a>
            <a href="#"><i class="bi bi-book"></i> User Guide</a>
            <a href="#"><i class="bi bi-clipboard"></i> Survey</a>
            <a href="#"><i class="bi bi-gear"></i> Settings</a>
            <a href="#" class="text-danger"><i class="bi bi-box-arrow-right"></i> Logout</a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>
